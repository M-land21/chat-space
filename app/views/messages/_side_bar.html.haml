.Sidebar
  .Sidebar-user
    .Sidebar-lists
      %h3.Sidebar-lists__user 
        = current_user.name
    .icons
      .icons__edit
        = link_to new_group_path do
          = icon("fas","edit")
      .icons__cog
        = link_to edit_user_path(current_user) do
          = icon("fas","cog")
  .Sidebar-group
    - current_user.groups.each do |group|
      .Group
        = link_to '#' do
          .Group-name
            = group.name
          .Group-message
